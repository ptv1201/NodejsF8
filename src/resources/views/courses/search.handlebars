<div class="row">
  {{#each courses}}
  <div class="col-md-4 mb-4">
    <div class="card">
      <div class="ratio ratio-16x9">
        <img src="{{this.imagine}}" 
             class="card-img-top" 
             style="object-fit: cover;" 
             alt="{{this.name}}">
      </div>
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <a href="/courses/{{this._id}}" class="btn btn-primary">View</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
